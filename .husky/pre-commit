NC='\033[0m'
BGreen='\033[30;42m'
BIPink='\033[1;35m'
BIBlue='\033[1;34m'

# Identificando arquivos staged
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM) || true

# Formatando e verificando cada arquivo alterado
for FILE in $STAGED_FILES; do
    # Verificando se o arquivo tem uma extensÃ£o suportada pelo Prettier
    if [[ $FILE =~ \.(js|jsx|ts|tsx|css|scss|json|md|html|yml|yaml)$ ]]; then
        echo -e "${BIPink}ðŸŒ¸ Formatando ${FILE}... ${NC}"
        yarn prettier --write "${FILE}" > /dev/null 2>&1
        git add "${FILE}"
    fi

    # Verificando com ESLint apenas arquivos com extensÃµes especÃ­ficas
    if [[ $FILE =~ \.(js|jsx|ts|tsx|css|scss)$ ]]; then
        echo -e "${BIBlue}ðŸ” Verificando ${FILE} com ESLint... ${NC}"
        yarn eslint "${FILE}" --fix --max-warnings=0 > /dev/null 2>&1
        git add "${FILE}"
    fi
done

echo -e "\n\n${BGreen}                                   ${NC}"
echo -e "${BGreen} Tudo certo! Push autorizado ðŸ‘® ðŸŽ‰ ${NC}"
echo -e "${BGreen}                                   ${NC}\n\n"
exit 0
